{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "skipLibCheck": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.json"
    ],
    "lib": [
        "es2022"
    ]
}